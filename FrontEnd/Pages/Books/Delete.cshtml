@page
@model 			DeleteModel
@{
    ViewData["Title"] = "Delete Book";
}

<h1>Delete Book</h1>

<h3>Are you sure you want to delete this book?</h3>

<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Book.Title
        </dd>
        <dt class="col-sm-2">
            ISBN
        </dt>
        <dd class="col-sm-10">
            @Model.Book.ISBN
        </dd>
        <dt class="col-sm-2">
            ReleaseYear
        </dt>
        <dd class="col-sm-10">
            @Model.Book.ReleaseYear
        </dd>
        <dt class="col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10">
            @Model.Book.Category
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Model.Book.Status
        </dd>
        <dt class="col-sm-2">
            Authors
        </dt>
        <dd class="col-sm-10">
            @string.Join(", ", Model.Book.Authors.Select(a => $"{a.Name} {a.Surname}"))
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Book.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="/Books/Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
